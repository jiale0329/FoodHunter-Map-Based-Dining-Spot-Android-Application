<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewRestaurantProfile">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/viewRestaurant_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBillRecordTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="BillRecordTitle"
        android:textColor="@color/black"
        android:textSize="23dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewRestaurant_toolbar" />

    <LinearLayout
        android:id="@+id/linearLayoutBillDetails1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBillRecordTitle">

        <TextView
            android:id="@+id/tvBillRecordDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="BillRecordDate" />

    </LinearLayout>

    <View
        android:id="@+id/viewNameLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutBillDetails1"/>

    <LinearLayout
        android:id="@+id/linearLayoutBillDetails2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewNameLine">

        <TextView
            android:id="@+id/tvBillRecordTotalAmountTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Amount" />

        <TextView
            android:id="@+id/tvBillRecordTotalAmountContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BillRecordTotalAmountContent"
            android:textColor="@color/black"
            android:textSize="17dp" />
    </LinearLayout>

    <View
        android:id="@+id/viewNameLine2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutBillDetails2"/>

    <LinearLayout
        android:id="@+id/linearLayoutBIllDetails3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewNameLine2">

        <TextView
            android:id="@+id/tvBillRecordPaidByTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paid by : " />

        <TextView
            android:id="@+id/tvBillRecordPaidByContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BillRecordPaidByContent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="17dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutBillDetails4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutBIllDetails3">

        <TextView
            android:id="@+id/tvBillRecordParticipantsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Participants" />

        <TextView
            android:id="@+id/tvBillRecordParticipantsContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BillRecordParticipantsContent"
            android:textColor="@color/black"
            android:textSize="17dp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRateRestaurantPopUp"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_button"
        android:textColor="@color/black"
        android:text="Delete Record"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>